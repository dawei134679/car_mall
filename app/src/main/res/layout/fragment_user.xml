<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hkkj.carmall.user.fragment.UserFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="个人中心"
        style="@style/top_title_style"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView2" />
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/ib_user_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/user_head_image" />
                <TextView
                    android:id="@+id/ib_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小阿狸, 你好!"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#eee"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_user_collect"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_sc"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="我的收藏" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />
            <TextView
                android:id="@+id/tv_user_zbk"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_zbk"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="我的质保卡" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_user_dkj"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_dkj"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="轮胎抵扣卷" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_user_jjgz"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_jjgz"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="计价规则" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_user_zpzz"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_zpzz"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="增票资质" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_user_fpgl"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_fpgl"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="发票管理" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />
            <TextView
                android:id="@+id/tv_user_yqhy"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_yqhy"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="邀请好友" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_user_ptdh"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_ptdh"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="平台电话" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_user_lxpt"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_lxpt"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="联系平台" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />
            <TextView
                android:id="@+id/tv_user_sjgzt"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_sjpt"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="商家工作台" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tv_user_yggzt"
                style="@style/TextStyle"
                android:drawableLeft="@drawable/user_channel_icon_yggzpt"
                android:drawableRight="@drawable/user_arrow_icon"
                android:text="员工工作台" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#eee"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/user_logoin_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="退出登录" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
