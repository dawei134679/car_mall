<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_good_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hkkj.carmall.merchant.GoodsManageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_goods_manage_back"
            style="@style/top_back_style"
            android:background="@drawable/top_bar_left_back"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品信息"
            style="@style/top_title_style" />
    </RelativeLayout>

    <View style="@style/Line_e0e0e0_Horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_gm_goods_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/describe_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/defaultTextview"
                android:text="商品描述"/>
            <TextView
                android:id="@+id/describe_text2"
                android:layout_below="@+id/describe_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:text="商品名称、商品宣传换文字、标签"/>
            <TextView
                android:id="@+id/describe_text3"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/user_arrow_icon"
                android:textColor="@color/defaultTextview"
                android:text="未添加"/>
        </RelativeLayout>
        <View style="@style/Line_e0e0e0_Horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_gm_goods_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/picture_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/defaultTextview"
                android:text="商品图片"/>
            <TextView
                android:id="@+id/picture_text2"
                android:layout_below="@+id/picture_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:text="商品缩略图片及详细图片"/>
            <TextView
                android:id="@+id/picture_text3"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/user_arrow_icon"
                android:textColor="@color/defaultTextview"
                android:text="未添加"/>
        </RelativeLayout>
        <View style="@style/Line_e0e0e0_Horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_gm_goods_priceAndStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/priceAndStandard_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/defaultTextview"
                android:text="商品价格型号"/>
            <TextView
                android:id="@+id/priceAndStandard_text2"
                android:layout_below="@+id/priceAndStandard_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:text="商品规格、型号、价格、库存、数据"/>
            <TextView
                android:id="@+id/priceAndStandard_text3"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/user_arrow_icon"
                android:textColor="@color/defaultTextview"
                android:text="未添加"/>
        </RelativeLayout>
        <View style="@style/Line_e0e0e0_Horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_gm_goods_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/type_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/defaultTextview"
                android:text="商品分类"/>
            <TextView
                android:id="@+id/type_text2"
                android:layout_below="@+id/type_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:text="商品分类设置"/>
            <TextView
                android:id="@+id/type_text3"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/user_arrow_icon"
                android:textColor="@color/defaultTextview"
                android:text="未添加"/>
        </RelativeLayout>
        <View style="@style/Line_e0e0e0_Horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_gm_goods_zbService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/zbService_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/defaultTextview"
                android:text="是否有质保服务"/>
            <TextView
                android:id="@+id/zbService_text2"
                android:layout_below="@+id/zbService_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:text="商品缩略图片及详细图片"/>
            <TextView
                android:id="@+id/zbService_text3"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/user_arrow_icon"
                android:textColor="@color/defaultTextview"
                android:text="未添加"/>
        </RelativeLayout>
        <View style="@style/Line_e0e0e0_Horizontal"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_gm_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/spcOrange"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:text="提交"/>
</LinearLayout>
