<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_logion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context="com.hkkj.carmall.activity.LogionActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="登陆"
        style="@style/top_title_style"
        android:layout_marginTop="10dp" />
    <ImageView
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="轮胎指南"
        android:id="@+id/textView6" />

    <EditText
        android:id="@+id/et_logion_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_corner_logion"
        android:drawableLeft="@drawable/login_phone_icon"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:hint="手机号码"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_corner_logion"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_logion_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_pwd_icon"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:hint="验证码"
            android:background="@null"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_check_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@color/defaultBackground"
            android:text="获取验证码"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/result_minor_text"
        android:text="输入手机号即可登陆"/>

    <TextView
        android:id="@+id/tv_logoin_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/shape_radius_logion_btn"
        android:text="登录"/>

</LinearLayout>
