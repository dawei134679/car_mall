<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_alignParentBottom="true"
            style="@style/Line_e0e0e0_Horizontal" />
        <ImageView
            android:id="@+id/iv_stcg_good"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/service_project"
            android:layout_marginLeft="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp" />

        <TextView
            android:id="@+id/iv_stcg_good_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_stcg_good"
            android:text="嘉实多............"
            android:lines="1"
            android:lineSpacingExtra="1dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/iv_stcg_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥200"
            android:layout_below="@id/iv_stcg_good_describe"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_stcg_good"
            android:textSize="12dp"
            android:textColor="@color/orderMoney"
            android:visibility="visible" />

        <TextView
            android:id="@+id/iv_stcg_good_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="规格1*8"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_stcg_good"
            android:textSize="12dp"
            android:layout_below="@+id/iv_stcg_good_price" />

        <CheckBox
            android:id="@+id/cb_stcg_good_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/spc_checkbox_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/tv_stcg_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="0"
            android:layout_alignTop="@+id/iv_stcg_add"
            android:layout_toLeftOf="@+id/iv_stcg_add" />

        <ImageView
            android:id="@+id/iv_stcg_add"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/project_add"
            android:layout_alignBottom="@+id/iv_stcg_good_specification"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/iv_stcg_sub"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:src="@drawable/project_sub"
            android:layout_toLeftOf="@+id/tv_stcg_num"
            android:layout_alignTop="@+id/iv_stcg_good_specification" />
    </RelativeLayout>


</RelativeLayout>
