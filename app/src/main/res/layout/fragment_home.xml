<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hkkj.carmall.home.fragment.HomeFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="轮胎指南"
        style="@style/top_title_style"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_fh_title" />

    <LinearLayout
        android:id="@+id/ll_fh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/tv_fh_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/scann"
            android:layout_marginLeft="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp" />
        <View
            android:layout_width="3dip"
            android:layout_height="match_parent"
            android:background="@color/defaultDividerLine"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/view" />
        <RadioGroup
            android:id="@+id/rg_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_sCar"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="小车"
                style="@style/TextButtonStyle"/>

            <RadioButton
                android:id="@+id/rb_bCar"
                android:layout_weight="0.9"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="大车"
                style="@style/TextButtonStyle"/>
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fh_rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/home_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
        <ImageButton
            android:id="@+id/ib_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/fh_rl_layout"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/home_call_service" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_tip"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秦皇岛"
            android:layout_weight="10"
            android:textSize="12dp"
            android:textColor="#000"/>
    </LinearLayout>
</LinearLayout>
