<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hkkj.carmall.home.fragment.HomeFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="轮胎指南"
        style="@style/top_title_style"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/scann"
            android:layout_marginLeft="30dp"
            />

        <View
            android:layout_width="3dip"
            android:layout_height="match_parent"
            android:background="@color/defaultDividerLine"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            />

        <RadioGroup
            android:id="@+id/rg_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_sCar"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="小车"
                style="@style/TextButtonStyle"/>

            <RadioButton
                android:id="@+id/rb_bCar"
                android:layout_weight="0.9"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="大车"
                style="@style/TextButtonStyle"/>
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_tip"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_home_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秦皇岛"
            android:layout_weight="10"
            android:textSize="12dp"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>
