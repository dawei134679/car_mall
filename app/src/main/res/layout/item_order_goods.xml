<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">
        <View
            android:layout_alignParentBottom="true"
            style="@style/Line_e0e0e0_Horizontal" />


        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/order_good_icon"
            android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/good_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_good"
                android:text="嘉实多............"
                android:lines="1"
                android:lineSpacingExtra="1dp"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥200"
                android:layout_below="@id/good_describe"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/iv_good"
                android:textSize="12dp"
                android:textColor="@color/orderMoney"
                android:visibility="visible" />

                <TextView
                    android:id="@+id/good_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格1*8"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/iv_good"
                    android:textSize="12dp"
                    android:layout_below="@+id/good_price" />

            <TextView
                android:id="@+id/good_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/good_specification"
                android:layout_alignTop="@id/good_specification"
                android:text="×10"
                android:textSize="12dp"
                android:layout_marginLeft="100dp"/>

    </RelativeLayout>


</RelativeLayout>
