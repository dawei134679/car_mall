<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/rvbgColor"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_corner"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <ImageView
                android:id="@+id/iv_wcard_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_icon"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/tv_wcard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转向灯质保卡"
                android:textSize="20dp"
                android:layout_weight="5"/>
            <TextView
                android:id="@+id/tv_wcard_staus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过期"
                android:textSize="20dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layerType="software"
            android:background="@drawable/line_stroke"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="25dp"/>
        <TextView
            android:id="@+id/tv_valid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-06-10 09:40"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_marginRight="25dp"/>

    </LinearLayout>

</LinearLayout>
